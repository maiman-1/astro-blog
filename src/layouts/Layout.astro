---
import Header from '../components/Header.astro';
import BaseHead from '../components/baseHead.astro';
import Sidebar from '../components/Sidebar.astro';
import Footer from '../components/Footer.astro';

import { SITE_TITLE, SITE_DESCRIPTION } from "../../config";

interface Props {
	title: string;
	description: string
	sideBarActiveItemID: string
}

const { title = SITE_TITLE, description=SITE_DESCRIPTION, sideBarActiveItemID, includeSidebar = true} = Astro.props;
---

<html>
	<head>
		<BaseHead title={title} description={description}></BaseHead>
	</head>
	<body>
		<div class="bg-base-100 drawer lg:drawer-open">
			<input id="my-drawer" type="checkbox" class="drawer-toggle" />
			<div class="drawer-content bg-base-100">
					<Header></Header>
				<div class="md:flex md:justify-center">
					<main class="p-6 pt-10 lg:max-w-[900px] max-w-[100vw]">
						<slot>
							Default Text
						</slot>
					</main>
				</div>
				<Footer></Footer>
			</div>
			{includeSidebar && <Sidebar sideBarActiveItemID={sideBarActiveItemID} />}
		</div>
		
	</body>
	
</html>


