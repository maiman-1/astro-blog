---
import { Image } from "astro:assets";
import {slugify, formatDate} from "./../js/utils"
const { frontmatter, post_url } = Astro.props;
//extract frontmatter
const {title, pubDate, description, author, image, tags} = frontmatter
const {url, alt} = image;

//console.log("~post", url)
---
<div class="card lg:card-side bg-neutral-content text-black shadow-xl my-10">
    <figure><Image src={url} alt={alt} width={200} height={125}/></figure>
    <div class="card-body">
		<div class="card-title">
			<a href={post_url}><h2 class="card-title">{title}</h2></a>
			{
				tags.map((tag) => (
					<div class="badge badge-primary">{tag}</div>
				))
			}
		</div>
      
      <a href="/astro-blog/about/"><p>{slugify(author)}</p></a>
      <p>{formatDate(pubDate)}</p>
      <p>{description}</p>
      <div class="card-actions justify-end">
        <a href={post_url}><button class="btn btn-accent">Read more</button></a>
      </div>
    </div>
  </div>

<style>
	.link-card {
		list-style: none;
		display: flex;
		padding: 1px;
		background-color: #23262d;
		background-image: none;
		background-size: 400%;
		border-radius: 7px;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
	}
	.link-card > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: calc(1.5rem - 1px);
		border-radius: 8px;
		color: white;
		background-color: #23262d;
		opacity: 0.8;
	}
	h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p#CardDescription{
		margin-top: 0.5rem;
		margin-bottom: 0;
	}
	.link-card:is(:hover, :focus-within) {
		background-position: 0;
		background-image: var(--accent-gradient);
	}
	.link-card:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent-light));
	}
</style>
