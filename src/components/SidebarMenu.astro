---
//taken from https://github.com/manuelernestog/astrofy/blob/main/src/components/SideBarMenu.astro
//Seriously manueler, thank you
const { sideBarActiveItemID } = Astro.props;
const activeClass = "bg-base-300"; // For primary color replace with `active` class
---

<ul class="menu grow shrink menu-md overflow-y-auto">
    <li><a class="py-3 text-base" id="home" href="/astro-blog">Home</a></li>
    <li><a class="py-3 text-base" id="about" href="/astro-blog/about">About Me</a></li>
    <li><a class="py-3 text-base" id="blog" href="/astro-blog/blog/">Blog</a></li>
    <li><a class="py-3 text-base" id="timer" href="/astro-blog/timer/">Timer</a></li>
    <li>
        <a
            class="py-3 text-base"
            href="mailto:contact.maimansham@gmail.com"
            target="_blank"
            referrerpolicy="no-referrer-when-downgrade">Contact</a
        >
    </li>
</ul>

<script define:vars={{ sideBarActiveItemID: sideBarActiveItemID, activeClass: activeClass }}>
const activeItemElem = document.getElementById(sideBarActiveItemID);
activeItemElem && activeItemElem.classList.add(activeClass);
</script>